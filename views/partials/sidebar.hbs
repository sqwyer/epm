<div class="col sidebar top">
    <label>Pages</label>
    <div class="pages">
        <a href="/">Dashboard</a>
        <a href="/invites">Invites</a>
        <a href="#">Calendar</a>
        <a href="#">Progress</a>
    </div>
    {{#ifem project}}
    <label>Projects</label>
    {{else}}
    <label>This Project</label>
    {{/ifem}}
    <div class="pages">
        {{#ifem project}}
        {{#ifem projects}}
        <p>You are not currently in any projects.</p>
        {{else}}
        {{#each projects}}
        <a href="/project/{{id}}">{{name}}</a>
        {{/each}}
        {{/ifem}}
        {{else}}
        <a href="/project/{{project.id}}">Homepage</a>
        <a href="#">Tasks</a>
        <a href="#">Events</a>
        <a href="#">Progress</a>
        <a href="/project/{{project.id}}/members">Members</a>
        {{#hasperm user.id project "manage_settings"}}
        <a href="/project/{{project.id}}/settings">Settings</a>
        {{/hasperm}}
        {{!-- <p>Project pages will go here at some point.</p> --}}
        {{/ifem}}
    </div>
</div>